<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>netcoreapp3.1</TargetFramework>

        <Authors>Ellpeck</Authors>
        <Description>Command-line interface for importing and exporting translations to traduora</Description>
        <PackageTags>cli commandline interface traduora translation server</PackageTags>
        <PackageProjectUrl>https://github.com/Ellpeck/TraduoraCLI</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Ellpeck/TraduoraCLI</RepositoryUrl>
        <PackageLicenseUrl>https://github.com/Ellpeck/TraduoraCLI/blob/main/LICENSE</PackageLicenseUrl>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>traduora</ToolCommandName>
        <VersionPrefix>1.0.1</VersionPrefix>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CommandLineParser" Version="2.8.0" />
      <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    </ItemGroup>

</Project>
